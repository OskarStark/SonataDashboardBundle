<div class="dashboard-composer__container__view block-view-{{ container.id }}" data-block-id="{{ container.id }}">
    <h2 class="dashboard-composer__container__view__header">{{ container.name }}<i class="fa fa-cogs pull-right"></i></h2>

    <span class="dashboard-composer__container__view__notice">{{ 'notice'|trans({}, 'SonataDashboardBundle') }}</span>











    <div class="dashboard-composer__container__settings">
        <label>Settings du container</label>


        <div class="dashboard-composer__container__settings__right">
            <div class="dashboard-composer__container__settings__right__remove">
                <a class="badge" href="{{ admin.generateObjectUrl('sonata.dashboard.admin.block.delete', dashboard, { 'childId': container.id }) }}">{{ 'composer.remove'|trans({}, 'SonataDashboardBundle') }} <i class="fa fa-times"></i> </a>
                <span class="dashboard-composer__container__settings__right__remove__confirm">
                    {{ 'composer.remove.container.confirm'|trans({}, 'SonataDashboardBundle') }}
                    <span class="yes">{{ 'yes'|trans({}, 'SonataDashboardBundle') }}</span>
                    <span class="cancel">{{ 'cancel'|trans({}, 'SonataDashboardBundle') }}</span>
                </span>
            </div>
        </div>
    </div>

    <div class="dashboard-composer__block-type-selector">
        <label>{{ 'composer.block.add.type'|trans({}, 'SonataDashboardBundle') }}</label>
        <select class="dashboard-composer__block-type-selector__select" style="width: auto">
            {% for blockServiceId, blockService in blockServices %}
                <option value="{{ blockServiceId }}">{{ blockService.name }}</option>
            {% endfor %}
        </select>
        <a class="btn btn-action btn-small dashboard-composer__block-type-selector__confirm"
           href="{{ admin.generateObjectUrl('sonata.dashboard.admin.block.create', dashboard, {'composer': true}) }}"><i class="fa fa-plus"></i></a>
        <span class="dashboard-composer__block-type-selector__loader">{{ 'loading'|trans({}, 'SonataDashboardBundle') }}</span>

        <small class="dashboard-composer__container__child-count pull-right">
            {{ 'blocks'|trans({}, 'SonataDashboardBundle') }} <span class="badge">{{ container.children|length }}</span>
        </small>
    </div>

    <ul class="dashboard-composer__container__children">
        {% for child in container.children %}
            {% include 'SonataDashboardBundle:BlockAdmin:compose_preview.html.twig' %}
        {% endfor %}
    </ul>
</div>